<div class="col-md-6 col-md-offset-3">
    <div class="new-game-form">
        <h1>Add Some Screenshots</h1>
        <%= simple_form_for([@game, @game.screenshots.build]) do |f| %>
            <%= f.input :title %>
            <%= f.label :screenshots %>
            <%= f.file_field :image %><br>
            <%= f.button :submit, "Add Screenshot", class: "btn btn-custom"  %>
        <% end %>
    </div>
</div>