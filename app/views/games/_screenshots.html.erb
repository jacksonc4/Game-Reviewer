<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <% @game.screenshots.each_with_index do |screenshot, i| %>
        <li data-target="#myCarousel" data-slide-to="<%= i %>" class="<% if i == 0 %>active<% end %>"></li>
      <% end %>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner screenshot">
      <div class="item active">
        <%= image_tag @game.screenshots.first.image.url %>
      </div>
      <% @game.screenshots.drop(1).each do |screenshot| %>
        <div class="item">
          <%= image_tag screenshot.image.url %>
        </div>
      <% end %>
    </div>

  <!-- Left and right controls -->
  <a class="left carousel-control screenshot-arrows" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control screenshot-arrows" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>